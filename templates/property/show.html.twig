{% extends 'base.html.twig' %}

{% block title %}Properties{% endblock %}

{% block body %}
<div class="jumbotron">
<div class="container mt-4" >
    <div class="row">
        <div class="col-md-8">
        
        </div>
        <div class="col-md-4">
            <h1>{{ property.title }}</h1>
            <h2>{{ property.rooms }} pièces - {{ property.surface }} m² </h2>
            <div class="text-primary" style="font-size:4rem; font-weight:bold;">{{property.price}} dt</div>
            
            <a href="#" class="btn btn-primary">Contactez l'agence</a>
        </div>
    </div>

</div>

<p>{{property.description | nl2br}}</p>
</div>

<div class="row">

    <div class="col-md-8">
    <h2> Caractéristiques </h2>
        <table class="table table-dark">
            <tr>
            <td>Surface habitable</td>
            <td>{{property.surface}}</td>
            
            </tr>
            <tr>
            
            <td>pièces</td>
            <td>{{property.rooms}}</td>
            </tr>
            <tr>
            
            <td>nombre de chambre</td>
            <td>{{property.bedrooms}}</td>
            </tr>
            <tr>
            
            <td>Nombre d'étages</td>
            <td>{{property.floor}}</td>
            </tr>
            <tr>
            
            <td>Chauffage</td>
            <td>{{property.heat}}</td>
            </tr>
        </tbody>
        </table>
        </div>
        <div class="col-md-4">
        <h2>Spécificités</h2>
        </div>
</div>


{% endblock %}